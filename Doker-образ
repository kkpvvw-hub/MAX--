# Stage 1: Сборка зависимостей
FROM python:3.12-slim AS builder

# Устанавливаем зависимости системы (минимально)
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Копируем только requirements.txt для кэширования
COPY requirements.txt .

# Устанавливаем зависимости в отдельную папку
RUN pip install --user --no-cache-dir -r requirements.txt


# Stage 2: Финальный образ (минимальный и безопасный)
FROM python:3.12-slim

# Создаём непривилегированного пользователя
RUN useradd --create-home --shell /bin/bash appuser
USER appuser
WORKDIR /home/appuser/app

# Копируем зависимости из builder-стадии
COPY --from=builder /root/.local /home/appuser/.local

# Добавляем .local/bin в PATH
ENV PATH=/home/appuser/.local/bin:$PATH

# Копируем код
COPY --chown=appuser:appuser . .

# Устанавливаем токен через переменную окружения (обязательно!)
# Значение по умолчанию — placeholder (заменяется при запуске)
ENV BOT_TOKEN=your_token_here

# Запускаем бота
CMD ["python", "bot.py"]
